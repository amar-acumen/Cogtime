<script type="text/javascript">
function addCmt()
{
	
	$.ajax({
			type : "post",
			url  : base_url+'logged/media_center/add_gospel_magazine_comments/',
			data : $('#frm_cmt').serialize(),
			dataType: 'json',
			success : function(response)
			{
				if(response.success == 0)
				{
					//$("#err_cmt").html(response.msg);
					showUIMsg(response.msg);
				}
				else 
				{
					$("#totalComments").html(response.total_comments);
					$("#tot_cmnt").html('('+response.total_comments+')');
					showUIMsg(response.msg);
					$("#postcmnts_txt").val('');
					$('.commentsliked > .comments-number').css('display','none');
					$('.commentspost').slideToggle('slow');
				}
				
			}
		});
}
function addLike()
{
	
	$.ajax({
			type : "post",
			url  : base_url+'logged/media_center/add_gospel_magazine_like/',
			data : "magazine_id=<?php echo $gospel_magazine[0]['id']?>",
			dataType: 'json',
			success : function(response)
			{
				if(response.success == 1)
				{
					$("#totalLike").html(response.total_like);
					$("#tot_like").html('('+response.total_like+')');
					
					showUIMsg();
				}
				else
				{
					return false;
				}
			}
		});
}
