<script type="text/javascript">
var carriage_count = 0;

$(document).ready(function () {


//counting the left characters in comment
function limitChars(textid, limit, infodiv)
{
  var text = $('#'+textid).val(); 
  
  if($('#'+textid).val() == ''){
	  carriage_count = 0;
  }
 
  var textlength = text.length;
  $('#text_count').html(textlength);
  if(textlength > limit)
  {
  $('#'+textid).val(text.substr(0,limit));
  return false;
  }
  else
  {
  return true;
  }
  
}


$(function(){
  $('#ta_desc').keyup(function(){
  limitChars('ta_desc', 500, '');
  });
  $('#ta_desc').keydown(function(){
  limitChars('ta_desc', 500, '');
  });
});


//// just to show correct no. of chracters left while the page is loaded...
limitChars('ta_desc',500, '');



});
function select_pic(photo_id){
	
	$('#prayer_image_name_'+photo_id).attr('checked','checked');
}

function restrict_carrige(e)
{
	/*//if(e.keyCode == 13)
	{
		$.ajax({
			type: 'post',
			url: base_url+'logged/prayer_wall/getCarriageCount',
			data: {'str':$('#ta_desc').val()},
			dataType: 'json',
	
			success: function (data, status) {
				
					if(data.count > 1){
						return false;
					}
				
				}	// end of success function...
		});
	}*/
	//alert($('#ta_desc').val().replace(/\r/g,"\r").replace(/\n/g,"\n"));

	if(e.keyCode == 13){
		carriage_count++;
	}
	/*if(e.keyCode == 8){
		carriage_count--;
	}*/
	if(e.keyCode == 13 && carriage_count >11){
		return false;
		//e.preventDefault();
	}
}
</script>


