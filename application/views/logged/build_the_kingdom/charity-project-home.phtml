		else
		{
			
		var datatosend=$("#frm_srch").serialize();
		var post_type = $('#post_type').val();
		showBusyScreen();
			$.ajax({
			   type: "POST",
			   url: base_url+"logged/build_the_kingdom/projects_ajax_pagination/"+post_type,
			   data: datatosend,
			   dataType: 'json',
			   success: function(data){
				  hideBusyScreen(); 
				   $('#main_div').show();
				   
				   $('#main_div').show();
				   $('#show_more_div').remove();
				   if(data.html != ''){
						  $('#no_project').hide();
						  $('#charity_content').html(data.html);
					}
				   if(data.view_more==true)
					{
						cur_page = data.cur_page;
						$('.shade_box_shade').append('<div class="custom_show view_more" id="show_more_div" style="width:475px;"><a href="javascript:void(0);" id="show_more_records_link" page_value="'+cur_page+'" onclick="show_more_records('+cur_page+')">[view more] </a> </div>');
						
					}
				}
			 });	
		}
	});
 
 
 });
</script>

<script type="text/javascript">

var ajax_req_feeds = null;
function show_more_records(page) {
	
	var post_type = $('#post_type').val();
	if(ajax_req_feeds!=null) {
		ajax_req_feeds.abort();
	}
	showUILoader_nodialog();
	ajax_req_feeds = $.ajax({
		type: 'get',
		url: base_url+'logged/build_the_kingdom/projects_ajax_pagination/'+post_type+'/'+page,
		dataType: 'json',

		success: function (data, status) {
			$('#show_more_div').remove();
			hideUILoader_nodialog();
			if(data.html!='') {
				
				//alert(data.cur_page+'dfdf');
				
				$('#charity_content').append(data.html);
				$('#show_more_records_link').attr('page_value', data.cur_page);
				$('#show_more_records_link').attr('onclick','');
				$('#show_more_records_link').attr('onclick','show_more_records('+data.cur_page+')');
			}
			else {
				$('#charity_content').append('<div class="view_more " style="text-align: center;"><p class="blue_bold12" style="font-size:14px;">No More Projects.</p></div>');
				$('#show_more_div').remove();
			}
			
			if(data.view_more==true)
			{
				cur_page = data.cur_page;
				$('.shade_box_shade').append('<div class="custom_show view_more" id="show_more_div" style="width:475px;"><a href="javascript:void(0);" id="show_more_records_link" page_value="'+cur_page+'" onclick="show_more_records('+cur_page+')">[view more] </a> </div>');
				
			}
            
            if(data.view_more==false)
            {
                
                $('#charity_content').append('<div class="view_more " style="text-align: center;" ><p class="blue_bold12" style="font-size:14px;">No More Projects.</p></div>');
                $('#show_more_div').remove();
            }
		

		}	// end of success function...
	});
}

