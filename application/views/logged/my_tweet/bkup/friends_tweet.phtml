<script type="text/javascript">

var ajax_req_feeds = null;
function show_more_tweets(page) {
	
	var i_user_id = $('#i_user_id').val();
	if(ajax_req_feeds!=null) {
		ajax_req_feeds.abort();
	}
	showUILoader_nodialog();
	ajax_req_feeds = $.ajax({
		type: 'get',
		url: base_url+'logged/tweets/my_friends_tweets_ajax_pagination/'+i_user_id+'/'+page,
		dataType: 'json',

		success: function (data, status) {

			hideUILoader_nodialog();
			if(data.html!='') {
				
				//alert(data.cur_page+'dfdf');
				
				$('#frnd_tweet_contents').append(data.html);
				$('#show_more_tweets_link').attr('page_value', data.cur_page);
				$('#show_more_tweets_link').attr('onclick','');
				$('#show_more_tweets_link').attr('onclick','show_more_tweets('+data.cur_page+')');
			}
			else {
				$('#frnd_tweet_contents').append('<div class="view_more" style="text-align: center;"><p class="blue_bold12" style="font-size:14px;">No More Tweets.</p></div>');
				$('#show_more_div').remove();
			}
            
			
            if(data.view_more==false)
            {
                
                $('#frnd_tweet_contents').append('<div class="view_more" style="text-align: center;"><p class="blue_bold12" style="font-size:14px;">No More Tweets.</p></div>');
                $('#show_more_div').remove();
            }
		

		}	// end of success function...
	});
}

