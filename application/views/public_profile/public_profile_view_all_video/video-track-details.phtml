	}
	showUILoader_nodialog();
	$.ajax({
		type: 'post',
		url: base_url+'public_profile_videos/copyVideo/'+videoId+'/'+albm_id,
		dataType: 'json',
		success: function (data, status) {
			     hideUILoader_nodialog();
				 $('#album3').val('');
				 showUIMsg(data.msg);
		}
	});
		
}

