<script type="text/javascript">


function search_()
  {
      showBusyScreen();
      var title = $('#txt_title').val();
      var category = $('#category').val();
      var uploaded_by = $('#txt_admin_id').val();
      var date_from = $('#date_to1').val();
      var date_to = $('#date_to2').val();
	  
	  
      $.ajax({
          url : admin_base_url+'media_center/christian_news/christian_news_listing_ajax',
          type : 'post',
          data : ({'title' : title,
                    'category':category , 
                    'uploaded_by' : uploaded_by,
                    'date_from':date_from,
                    'date_to':date_to,
					'hd_val':$('#hd_val').val()
          }),
          success : function(data)
          {
              hideBusyScreen();
              $('#table_contents').html(data);
          }
      });
      return false;
  }
  

function confirm_delete_(id)
{
  $('#i_del_id').val(id);
  show_dialog('delete-page-popup');
}

function delete_()
{
    var id = $('#i_del_id').val();
    var current_page = $('#current_page').val();
    showBusyScreen();
    $.ajax({
          url : admin_base_url+'media_center/media_article/delete_news/'+ current_page,
          type : 'post',
          data : ({'id' : id,'current_page':current_page}),
          dataType : 'json',
          success : function(data)
          {

              showUIMsg(data.msg);
              hideBusyScreen();
              hide_dialog();
              $('#table_contents').html(data.html);
          }
      });
    
}

