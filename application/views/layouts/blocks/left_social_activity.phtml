 function  church_verify(){

     var vcode = $('#vcode').val().trim();

     if(vcode == ''){

         $('#error1').css('display','block').html('Please enter verification code');

     }

     else{

         $('#error1').css('display','none');

          showBusyScreen();

                $.ajax({

                    type: "POST",

                    url: base_url + "base_controller/verify_church_code/",

                    data: ({'vcode':vcode}),

                    dataType: 'json',

                    success: function(data) {

                        

                        

                        hideBusyScreen();

                        if(data.msg == 'Error!'){

                           $('#error1').css('display','block').html('Your Verification code is wrong or your church is not approved by admin'); 

                        }

                        else if(data.msg == 'ok'){

                            $('#success1').css('display','block').html('Church space created successfully..')

                           location.reload();  

                        }

                        else if(data.msg == 'err'){

                            $('#error1').css('display','block').html('Church space already created..');   

                        }else if(data.msg == 'err1'){

                            $('#error1').css('display','block').html('Validation code has been expired');

                        }

                    }

                });
         }
     }

     

